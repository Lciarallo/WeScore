<section class="loginsection">
	<div class="logincontainer" id="logincontainer">

		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left">
					<h1 class="h1title">Já é cadastrado?</h1>
					<p>Faça login e divirta-se.</p>
					<button class="ghost" id="login">Login
						<i class="lni lni-arrow-left login-button"></i>
					</button>
				</div>
				<div class="overlay-panel overlay-right">
					<h1 class="h1title">Bem-vindo ao WeScore!</h1>
					<p>Crie uma conta, Junte-se a nós e comece sua jornada.</p>
					<button class="ghost" id="register">Register
						<i class="lni lni-arrow-right register-button"></i>
					</button>
				</div>
			</div>

		</div>

		<div class="overlay-containerLogin">
			<div class="login">
				<div class="login-panel login-left">

					<form class="login-form" action="#">
						<h1 class="h1login">Register</h1>
						<input type="text" placeholder="Name" />
						<input type="email" placeholder="Email" />
						<input type="password" placeholder="Password" />
						<button>Register</button>
					</form>

				</div>
				<div class="login-panel login-right">

					<form class="login-form" action="#">
						<h1 class="h1login">Login</h1>
						<input type="email" placeholder="Email" />
						<input type="password" placeholder="Password" />
						<div class="content">
							<div class="checkbox">
								<input type="checkbox" name="checkbox" id="checkbox" />
								<label class="label-login">Lembrar-me</label>
							</div>
							<div class="pass-link">
								<a href="#">Esqueceu a senha?</a>
							</div>
						</div>
						<button>login</button>
					</form>

				</div>
			</div>
		</div>

	</div>
</section>

<script src="js/login.js"></script>